{
    "scripts": {
        "build": "run-s build:clean build:bundle",
        "build:bundle": "parcel build ./index.html -d .public --no-source-maps",
        "build:clean": "trash .public/*",
        "dev": "parcel ./index.html -d .dist --open",
        "fmt": "prettier --list-different --write --ignore-path .gitignore **/*.{html,json,js,jsx,ts,tsx}"
    },
    "dependencies": {
        "firebase": "^7.8.2",
        "normalize.css": "^8.0.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "styled-components": "^5.0.1"
    },
    "devDependencies": {
        "@types/react-dom": "^16.9.5",
        "@types/react-router-dom": "^5.1.3",
        "@types/styled-components": "^4.4.3",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "trash-cli": "^3.0.0",
        "typescript": "^3.7.5"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "bracketSpacing": false,
        "arrowParens": "always"
    }
}
